#!/usr/bin/env bash

__maximize()
{
    declare \
            i= \
            win= \
            x=${region_geo[0]} \
            y=${region_geo[1]} \
            w=${region_geo[2]} \
            h=${region_geo[3]}

    for ((i=0 ; i <= win_region_number-1 ; i++))
    do
        win=${win_xid[i]}
        __do_wmctrl
        __store_region
    done
}
